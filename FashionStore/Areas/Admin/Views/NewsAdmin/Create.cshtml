@model FashionStore.Repository.Models.News
@{
    ViewData["Title"] = "Viết bài mới";
}

<div class="card shadow border-0 p-4">
    <h3 class="mb-4 text-primary">📝 Viết Bài Mới</h3>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="fw-bold">Tiêu đề bài viết</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề..." required />
        </div>

        <div class="mb-3">
            <label class="fw-bold">Hình đại diện</label>
            <input type="file" name="file" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label class="fw-bold">Tóm tắt (Hiện ngoài trang chủ)</label>
            <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Nội dung chi tiết</label>
            <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsPublished" class="form-check-input" type="checkbox" checked />
            <label class="form-check-label">Đăng bài ngay (Public)</label>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-paper-plane"></i> Đăng Bài</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>