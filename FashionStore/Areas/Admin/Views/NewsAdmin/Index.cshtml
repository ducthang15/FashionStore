@model IEnumerable<FashionStore.Repository.Models.News>

@{
    ViewData["Title"] = "Quản lý Tin Tức";
}

<div class="card shadow border-0 mt-3">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-0 fw-bold text-primary">📰 Danh Sách Tin Tức</h4>
            <small class="text-muted">Quản lý các bài viết trên Blog của cửa hàng</small>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4">
            <i class="fa-solid fa-pen-nib me-2"></i> Viết bài mới
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Hình ảnh</th>
                        <th>Tiêu đề / Tóm tắt</th>
                        <th>Ngày đăng</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-regular fa-folder-open fa-3x mb-3"></i>
                                <p>Chưa có bài viết nào. Hãy thêm bài viết đầu tiên!</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="@item.ImageUrl" class="rounded shadow-sm"
                                         style="width: 100px; height: 70px; object-fit: cover;"
                                         onerror="this.src='/images/no-image.png'">
                                </td>

                                <td style="max-width: 350px;">
                                    <div class="fw-bold text-dark text-truncate">@item.Title</div>
                                    <div class="text-muted small text-truncate">
                                        @item.Summary
                                    </div>
                                </td>

                                <td>
                                    <div class="small fw-bold">@item.CreatedAt?.ToString("dd/MM/yyyy")</div>
                                    <div class="text-muted small">@item.CreatedAt?.ToString("HH:mm")</div>
                                </td>

                                <td>
                                    @if (item.IsPublished == true)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-earth-americas me-1"></i> Public
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill">
                                            <i class="fa-solid fa-lock me-1"></i> Nháp
                                        </span>
                                    }
                                </td>

                                <td class="text-end pe-4">
                                    <a href="#" class="btn btn-sm btn-outline-primary me-1" title="Sửa bài viết">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.NewsId" method="post" class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài viết: @item.Title?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa bài viết">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>