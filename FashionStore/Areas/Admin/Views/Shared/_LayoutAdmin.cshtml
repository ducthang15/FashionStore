<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Trị Hệ Thống</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center"><i class="fa-solid fa-gem text-primary me-2"></i>FASHION ADMIN</div>
            <div class="list-group list-group-flush mt-3">
                <div class="text-secondary small fw-bold px-4 mb-2 mt-2">QUẢN LÝ CỬA HÀNG</div>
                
                <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Index" 
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ProductAdmin" ? "active" : "")">
                    <i class="fa-solid fa-box-open"></i> Sản Phẩm
                </a>
                <a asp-area="Admin" asp-controller="OrderAdmin" asp-action="Index" 
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "OrderAdmin" ? "active" : "")">
                    <i class="fa-solid fa-cart-shopping"></i> Đơn Hàng
                </a>
                <a asp-area="Admin" asp-controller="AppointmentAdmin" asp-action="Index" 
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AppointmentAdmin" ? "active" : "")">
                    <i class="fa-solid fa-calendar-check"></i> Lịch Hẹn
                </a>

                <div class="text-secondary small fw-bold px-4 mb-2 mt-4">HỆ THỐNG</div>
                <a asp-area="" asp-controller="Home" asp-action="Index" target="_blank" class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-earth-americas"></i> Xem Website
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action text-danger">
                    <i class="fa-solid fa-power-off"></i> Đăng Xuất
                </a>
                <a asp-area="Admin" asp-controller="NewsAdmin" asp-action="Index" class="list-group-item ...">
                    <i class="fa-solid fa-newspaper"></i> Quản lý Blog
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light py-3 px-4">
                <div class="d-flex align-items-center">
                    <h4 class="m-0 fw-bold text-dark">Dashboard</h4>
                </div>
                <button class="navbar-toggler ms-auto d-lg-none"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mobileMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                        <li class="nav-item me-3">
                            <span class="badge bg-success rounded-pill px-3 py-2">System Online</span>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-bold text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=Admin&background=0D8ABC&color=fff" class="rounded-circle me-2" width="35">
                                Quản trị viên
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>