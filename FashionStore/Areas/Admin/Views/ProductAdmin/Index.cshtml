@model IEnumerable<FashionStore.Repository.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    // Tạm thời dùng Layout mặc định, sau này ta sẽ tạo Layout riêng cho Admin
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-area="Admin" asp-controller="OrderAdmin" asp-action="Index" class="btn btn-success mb-3"> Quản lý đơn hàng
</a>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý Sản Phẩm</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Thêm sản phẩm mới</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá bán</th>
                <th>Tồn kho</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td><img src="@item.ImageUrl" style="width: 50px; height: 50px; object-fit: cover;"></td>
                    <td class="fw-bold">@item.ProductName</td>
                    <td>@item.Category.CategoryName</td>
                    <td class="text-danger">@item.Price.ToString("N0") đ</td>
                    <td>@item.StockQuantity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen"></i> Sửa
                        </a>

                        <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>