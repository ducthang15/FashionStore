@model FashionStore.Repository.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-4">
    <h2>Thêm Sản Phẩm Mới (Có Upload Ảnh)</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow p-4 bg-light rounded">

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label fw-bold">Tên sản phẩm</label>
            <input asp-for="ProductName" class="form-control" required />
        </div>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
            <option value="">-- Chọn danh mục --</option>
        </select>

        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-bold">Giá bán</label>
            <input asp-for="Price" type="number" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="StockQuantity" class="form-label fw-bold">Tồn kho</label>
            <input asp-for="StockQuantity" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chọn hình ảnh (Có thể chọn nhiều)</label>
            <input type="file" name="files" class="form-control" multiple accept="image/*" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">LƯU SẢN PHẨM</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>