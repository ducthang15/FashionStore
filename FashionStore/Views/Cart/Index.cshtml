@model IEnumerable<FashionStore.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    // Tính tổng tiền toàn bộ giỏ hàng
    decimal grandTotal = Model.Sum(x => x.Total);
}

<div class="container mt-4">
    <h2 class="mb-4 fw-bold">🛒 Giỏ hàng của bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <p class="mb-0 fs-5">Giỏ hàng đang trống.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-2">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered align-middle text-center mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 70px; height: 70px; object-fit: contain;">
                            </td>
                            <td class="fw-bold text-start">@item.ProductName</td>
                            <td>@item.Price.ToString("N0") đ</td>
                            <td style="width: 100px;">
                                <input type="number" class="form-control text-center" value="@item.Quantity" readonly>
                            </td>
                            <td class="text-danger fw-bold">@item.Total.ToString("N0") đ</td>
                            <td>
                                <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end align-items-center mt-4 p-3 bg-light border rounded">
            <h4 class="m-0 me-4">Tổng thanh toán: <span class="text-danger fw-bold fs-3">@grandTotal.ToString("N0") đ</span></h4>

            <a asp-action="Checkout" class="btn btn-success btn-lg px-5">THANH TOÁN</a>
        </div>
    }
</div>