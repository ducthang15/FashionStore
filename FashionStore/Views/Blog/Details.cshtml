@model FashionStore.Repository.Models.News
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="@Model.ImageUrl" class="img-fluid w-100 rounded mb-4" style="max-height: 400px; object-fit: cover;">

            <h1 class="fw-bold mb-3">@Model.Title</h1>
            <p class="text-muted"><i class="fa-regular fa-clock"></i> @Model.CreatedAt?.ToString("dd/MM/yyyy")</p>
            <hr>

            <div class="blog-content fs-5" style="line-height: 1.8;">
                @Html.Raw(Model.Content?.Replace("\n", "<br>"))
            </div>

            <div class="mt-5">
                <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>