@model IEnumerable<FashionStore.Repository.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
}
<link href="/css/site.css" rel="stylesheet" />
<div id="heroCarousel" class="carousel slide shadow  overflow-hidden" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="3000">
            <img src="~/image/banner-main.png" class="d-block w-100" style="height: 700px; object-fit: cover; filter: brightness(0.7);" alt="...">
            <div class="carousel-caption d-none d-md-block text-start">
                <a href="#products" class="btn btn-light btn-lg rounded-pill px-5 fw-bold text-dark">
                    KHÁM PHÁ NGAY
                </a>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?q=80&w=1200&auto=format&fit=crop" class="d-block w-100" style="height: 700px; object-fit: cover; filter: brightness(0.7);" alt="...">
            <div class="carousel-caption d-none d-md-block text-start">
                <a href="#products" class="btn btn-light btn-lg rounded-pill px-5 fw-bold text-dark">
                    KHÁM PHÁ NGAY
                </a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>


<div class="split-section">
    <div class="split-item left">
        <img src="/image/lookbook_1_image.jpg" alt="About Us">

        <div class="content">
            <h2>ABOUT US</h2>
            <p>Who we are</p>
            <span class="link">DISCOVER MORE</span>
        </div>
    </div>

    <div class="split-item right">
        <img src="/image/" alt="Bespoke">

        <div class="content">
            <h2>BESPOKE</h2>
            <p>Our service</p>
            <span class="link">DISCOVER MORE</span>
        </div>
    </div>
</div>

<div class="luxury-banner mb-5">
    <img src="/image/lookbook_3_image.jpg" alt="">
    <div class="banner-content">
        <p class="quote">
            We don’t wish to have too many customers,
            but we try our best to have customers for life
        </p>
        <a href="#" class="btn-line">MAKE AN APPOINTMENT</a>
    </div>
</div>

