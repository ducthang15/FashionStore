@model IEnumerable<FashionStore.Repository.Models.Product>

<h2 class="text-center mb-4 text-uppercase fw-bold">Sản phẩm nổi bật</h2>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="@item.ImageUrl" class="card-img-top p-3" alt="@item.ProductName" style="height: 250px; object-fit: contain;">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title text-truncate">@item.ProductName</h5>
                    <p class="card-text text-danger fw-bold fs-5">@item.Price.ToString("N0") đ</p>

                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId" class="btn btn-dark mt-auto w-100">
                        <i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ
                    </a>
                </div>
            </div>
        </div>
    }
</div>